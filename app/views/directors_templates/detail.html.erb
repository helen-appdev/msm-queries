<h1>Director <%=@id%> details</h1>
<a href="/directors">Go back</a>  
<hr>
<dl>
  <dt>Name</dt>
    <dd><%=@name%> </dd>
  <dt>Dob</dt>
    <dd><%=@dob%> </dd>
  <dt>Bio</dt>
    <dd><%=@bio%> </dd>
  <dt>Image</dt>
    <img src = "http://robohash.org/<%=@name%>">
  <dt>Created at</dt>
    <dd>about <%=@created%> years ago<dd>
  <dt>Updated at</dt>
    <dd>about <%=@updated%> years ago</dd>
</dl>
<hr>
<h2>Filmography</h2>
<table border = "1">
  <tr>
    <th>ID</th>	
    <th>Image	</th>	
    <th>Title	</th>	
    <th>Year	</th>	
    <th>Director	</th>	
    <th>	</th>	
  </tr>
  
    <% @movie_list.each do |this| %>
  <tr>
    <td> <%=this.id%></td>
    <td> <img src = "http://robohash.org/<%=@name%>"></td>
    <td> <%=this.title%></td>
    <td> <%=this.year%></td>
    <td> <%=@name%></td>
    <td> <a href = "/movies/<%=this.id%>">Show details</a></td>
    </tr>
    <%end%>
  